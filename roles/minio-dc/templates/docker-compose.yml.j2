# docker-compose.yml
version: '3'

services:
  minio:
    image: minio/minio:RELEASE.2022-10-24T18-35-07Z
    restart: unless-stopped
    volumes:
      - ./minio-config:/root/.minio
      - ./minio-data:/data
#    ports:
#      - "9000:9000"
    environment:
      - VIRTUAL_HOST=s3.{{instance_url}}
      - VIRTUAL_PORT=9000
      - LETSENCRYPT_HOST=s3.{{instance_url}}
      - MINIO_ACCESS_KEY=${MINIO_ACCESS_KEY:?MINIO_ACCESS_KEY not set}
      - MINIO_SECRET_KEY=${MINIO_SECRET_KEY:?MINIO_SECRET_KEY not set}
      - MINIO_SERVER_URL=https://s3.{{instance_url}}
      - MINIO_UPDATE=off
      - MINIO_REGION=us-east-1
    command: server --console-address ":9002" /data
    networks:
      - web

  tunnel:
    image: marcnuri/port-forward
    restart: unless-stopped
    environment:
      - VIRTUAL_HOST=console.s3.{{instance_url}}
      - VIRTUAL_PORT=9002
      - LETSENCRYPT_HOST=console.s3.{{instance_url}}
      - REMOTE_HOST=minio
      - REMOTE_PORT=9002
      - LOCAL_PORT=9002
    networks:
      - web

networks:
  web:
    external: true
    name: webshare
